    "cookie-session": "^2.0.0-beta.2",
    "express": "^4.17.1",
    "jest": "^27.3.1",
    "migrate-mongoose": "^4.0.0",
    "mongoose": "^6.0.12",
    "nodemon": "^2.0.15",
    "passport": "^0.5.0",
    "passport-google-oauth20": "^2.0.0",
    "path-parser": "^2.0.2",
    "puppeteer": "^1.0.0",
    "redis": "^3.1.2",
    "simple-get": "^4.0.0",
