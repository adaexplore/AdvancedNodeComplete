{
  "name": "server",
  "version": "1.0.0",
  "description": "Starting project for a course on Advanced Node @ Udemy",
  "main": "index.js",
  "jest": {
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js --ignore tests",
    "client": "npm run start --prefix client",
